    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
