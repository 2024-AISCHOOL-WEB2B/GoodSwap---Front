{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src"] // 추가
  },
  "include": ["src/**/*", "src/shared/assets/.tsx", "src/global.d.ts"] // src 디렉토리 안의 모든 파일 포함
}
