{
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": false,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./src"] // 추가
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/global.d.ts"] // 이미 src 전체가 포함되어 있으면 유지
}
